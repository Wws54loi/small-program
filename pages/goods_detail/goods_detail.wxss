.price {
  color: #eb4450;
  font-size: 40rpx;
  font-weight: bold;
}
.content {
  display: flex;
  height: 70rpx;
  margin-top: 15rpx;
  align-items: center;
  color: #aeabae;
}
.left {
  flex: 5;
  padding: 0 10rpx;
}
.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
    border-left: 2rpx solid #aeabae;
}
.swiperItem {
  height: 70vw;
  text-align: center
}
.swiperItem image {
  width: 60%;
}
.goodsInfo_title{
  font-size: 32rpx;
  color: rgb(235, 68, 80);
  margin-top: 16rpx;
  font-weight: 600;
  border-top: 10rpx solid rgb(238, 238, 238);
   border-bottom: 10rpx solid rgb(238, 238, 238);
   padding: 10rpx 15rpx;
}
.bottomTools{
  display: flex;
  position: fixed;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  bottom: 0;
}
.setting{
  display: flex;
  flex: 1
}
.contact,
.share,
.mycart{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 22rpx;
}
.share{
  border-left: 1px solid #aeabae;
   border-right: 1px solid #aeabae;
}
.icon{
  font-size: 38rpx;
}
.btn{
  display: flex;
  flex: 1
}
.btn_cart,
.btn_buy{
  flex: 1;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.btn_cart{
    background-color: rgb(255, 165, 0);
}
.btn_buy{
  background-color: rgb(235, 68, 80)
}
