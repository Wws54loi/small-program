/* pages/cart/cart.wxss */

.header {
  height: 150rpx;
  border-bottom: 4rpx solid rgb(255, 236, 234);
}

.btn {
  display: flex;
  justify-content: center;
  height: 100%;
  align-items: center;
}
.goodsItem{
    display: flex;
  align-items: center;
  height: 200rpx;
  border-bottom: 4rpx solid rgb(255, 236, 234)
}
.addAddress {
  width: 400rpx;
  height: 80rpx;
  border: 4rpx solid rgb(120, 178, 121);
  color: rgb(120, 178, 121);
  line-height: 80rpx;
  font-size: 34rpx;
  text-align: center;
  font-weight: 500;
}

.name_phonenum {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.address {
  padding: 20rpx;
}

.shopCar_title {
  font-size: 38rpx;
  font-weight: 500;
  padding: 15rpx;
  border-bottom: 4rpx solid rgb(180, 119, 122);
}
.img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img_small {
  width: 80%;
}

.checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goodsInfo {
  flex: 4;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around
}

.goodsInfo_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodsInfo_price_num{
  display: flex;
  justify-content: space-between
}
.price{
   color: #eb4450;
  font-size: 30rpx;
  font-weight: bold;
}
.num{
  display: flex
}
.add,
.reduce{
  display: flex;
  margin:0 10rpx;
  justify-content: center;
  align-items: center;
  height: 32rpx;
  width: 32rpx;
  border: 2rpx solid rgb(255, 236, 234)
}
.footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background-color: #fff;
  border-top: 2rpx solid rgb(230, 231, 230) 
}
.left{
  display: flex
}
.totalPrice{
  display: flex;
  padding: 0 10rpx;
  flex-direction: column;
  align-items: flex-end;
}
.check_btn{
  font-size: 38rpx;
  width: 180rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: rgb(244, 84, 82);
  color: #fff;
}
.includes{
  font-size: 24rpx
}
.total_price{
  font-size: 38rpx;
  color: rgb(244, 84, 82) 
}